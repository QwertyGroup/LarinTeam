<Window x:Class="FaceRecognition.UI.Galley.FaceExhibition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognition.UI.Galley"
        mc:Ignorable="d"
        Title="Face Gallery" Height="550" Width="700" Background="#FFF1F1F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Update" Width="100" Height="30" Margin="10" Click="Button_Click"/>
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="spGallery"/>
        </ScrollViewer>
    </Grid>
</Window>
