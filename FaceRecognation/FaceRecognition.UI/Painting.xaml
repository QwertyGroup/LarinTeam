<UserControl x:Class="FaceRecognition.UI.Galley.Painting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FaceRecognition.UI.Galley"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="tbInfo" Text="Persons Id" FontSize="16" Foreground="#FF040404"/>
        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="deleteFaceButt" Text="X" FontSize="18" FontFamily="Arial Black" Foreground="#FFBD0000" VerticalAlignment="Center" HorizontalAlignment="Center" MouseLeftButtonDown="deleteFaceButt_MouseLeftButtonDown" MouseLeftButtonUp="deleteFaceButt_MouseLeftButtonUp"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="FacePanel" Orientation="Horizontal"></StackPanel>
    </Grid>
</UserControl>
