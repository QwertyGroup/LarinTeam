<Window x:Name="windowMain" x:Class="FaceRecognation._1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognation._1._0"
        mc:Ignorable="d"
        Title="Face recognising machine 2017 awarded" Height="460" Width="600" Icon="FRLogo.png">
	<Grid Background="#FFD5E9FF">
		<TextBlock Text="Photo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="114,9,0,0" FontSize="18"></TextBlock>
		<Border BorderBrush="#FF0088FF" BorderThickness="3" CornerRadius="15" Padding="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,39,0,0" >
			<Image x:Name="imgPhoto" HorizontalAlignment="Left" VerticalAlignment="Top" Height="250" Width="250"/>
		</Border>
		<Border BorderBrush="#FF0088FF" BorderThickness="3" CornerRadius="15" Padding="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="309,39,0,0" >
			<StackPanel Margin="5">
				<TextBlock Text="Commands" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" />
				<Button x:Name="cmdTakePhoto" Content="Take Photo" FontSize="20" Padding="6,4" Margin="4" Foreground="Black" Background="{x:Null}" BorderBrush="#FF3A3A3A" BorderThickness="2,2,1,2"/>
				<Button x:Name="cmdAddFace" Content="Add Taken face to list" FontSize="20" Padding="6,4" Margin="4" Background="{x:Null}" Foreground="Black" BorderBrush="#FF3A3A3A" BorderThickness="2,2,1,2"/>
				<Button x:Name="cmdFindSimilar" Content="Compare photos" FontSize="20" Padding="6,4" Margin="4" Background="{x:Null}" Foreground="Black" BorderBrush="#FF3A3A3A" BorderThickness="2,2,1,2"/>
				<Button x:Name="cmdCreateFaceList" Content="Create FaceList" FontSize="20" Padding="6,4" Margin="4" Background="{x:Null}" Foreground="Black" BorderBrush="#FF3A3A3A" BorderThickness="2,2,1,2"/>
			</StackPanel>
		</Border>
		<Border BorderBrush="#FF0088FF" BorderThickness="3" CornerRadius="15" Padding="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,312,0,0" >
			<StackPanel x:Name="spTakenPhotos" Orientation="Horizontal" Height="80" MinWidth="80" Margin="4"/>
		</Border>
	</Grid>
</Window>
