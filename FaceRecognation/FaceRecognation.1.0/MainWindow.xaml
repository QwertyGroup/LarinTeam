<Window x:Name="windowMain" x:Class="FaceRecognation._1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognation._1._0"
        mc:Ignorable="d"
        Title="Face recognising machine 2017 awarded" Height="630" Width="800" Icon="FRLogo.png">
	<Grid Background="#FFD5E9FF">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="1">
			<TextBlock Text="Photos" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="216,9,0,0" FontSize="18"></TextBlock>
			<Border BorderBrush="#FF0088FF" BorderThickness="3" CornerRadius="15" Padding="5" VerticalAlignment="Top" Margin="0,40,24,0" HorizontalAlignment="Right" Width="238" >
				<StackPanel Margin="5">
					<TextBlock Text="Commands" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" />
					<Button x:Name="cmdTakePhoto" Content="Browse photo" FontSize="20" Padding="6,4" Margin="4" Foreground="Black" Background="{x:Null}" BorderBrush="#FF3A3A3A" BorderThickness="2" Click="cmdTakePhoto_Click"/>
					<Button x:Name="cmdDetectFace" Content="Detect Faces" FontSize="20" Padding="6,4" Margin="4" Foreground="Black" Background="{x:Null}" BorderBrush="#FF3A3A3A" BorderThickness="2" Click="cmdDetectFace_Click"/>
					<TextBlock/>
					<Button x:Name="cmdAddFace" Content="Add Taken face to list" FontSize="20" Padding="6,4" Margin="4" Background="{x:Null}" Foreground="Black" BorderBrush="#FF3A3A3A" BorderThickness="2" Click="cmdAddFace_Click"/>
					<Button x:Name="cmdFindSimilar" Content="Compare photos" FontSize="20" Padding="6,4" Margin="4" Background="{x:Null}" Foreground="Black" BorderBrush="#FF3A3A3A" BorderThickness="2" Click="cmdFindSimilar_Click"/>
					<Button x:Name="cmdCreateFaceList" Content="Create FaceList" FontSize="20" Padding="6,4" Margin="4" Background="{x:Null}" Foreground="Black" BorderBrush="#FF3A3A3A" BorderThickness="2" Click="cmdCreateFaceList_Click"/>
					<TextBlock/>
					<Button x:Name="cmdClearCache" Content="Clear Cache" FontSize="20" Padding="6,4" Margin="4" Background="{x:Null}" Foreground="Black" BorderBrush="#FF3A3A3A" BorderThickness="2" Click="cmdClearCache_Click"/>
				</StackPanel>
			</Border>
			<ListBox x:Name="lbCompResults" HorizontalAlignment="Left" Height="176" Margin="20,417,0,0" VerticalAlignment="Top" Width="274"/>
		</Grid>
		<ScrollViewer Grid.Column="0">
			<WrapPanel x:Name="spTakenPhotos" Height="Auto" Width="450" Margin="4">
			</WrapPanel>
		</ScrollViewer>
	</Grid>
</Window>
